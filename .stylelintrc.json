{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-idiomatic-order"
  ],

  "declaration-empty-line-before": [
    "always",
    {
      "ignore": [
        "after-comment",
        "after-declaration",
        "first-nested",
        "inside-single-line-block"
      ]
    }
  ],

  "rules": {
    "indentation": 2,
    "selector-class-pattern": "^[a-z][a-z0-9_-]+$",
    "no-descending-specificity": null
  }
}
